{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "DOM"
    ],
    "types": [
      "node"
    ],
    "strictNullChecks": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@jobplanet/*": [
        "jobplanet/*"
      ],
      "@saramin/*": [
        "saramin/*"
      ],
      "@incruit/*": [
        "incruit/*"
      ],
      "@jobkorea/*": [
        "jobkorea/*"
      ]
    }
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "temp"
  ]
}